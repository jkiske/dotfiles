;; -*- mode: Emacs-Lisp;-*-

(setq-default cursor-type 'bar)
(setq inhibit-startup-message t)
(tool-bar-mode -1)
(scroll-bar-mode -1)
(blink-cursor-mode -1)

(global-unset-key "\C-z")

(use-package zoom-frm
  :ensure t
  :bind (("C-+" . zoom-frm-in)
         ("C-_" . zoom-frm-out)
         ("C-0" . zoom-frm-unzoom)
         ("s-+" . zoom-frm-in)
         ("s-_" . zoom-frm-out)
         ("s-0" . zoom-frm-unzoom)))

(setq frame-title-format "%*%b")
