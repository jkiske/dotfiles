[color]
    branch = auto
    diff = auto
    status = auto

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold

[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[status]
    submodulesummary = true

[alias]
    s = status
    a = add
    b = branch
    co = checkout
    cm = commit
    rb = rebase
    f = fetch
    cp = cherry-pick
    c = commit
    lg = log --oneline --decorate --graph
    br = branch -av
    sinit = submodule init
    spull = pull --recurse-submodules
    supdate = submodule update --recursive
    sfrp = !git stash && git fetch && git rebase $1 && git stash pop && :
[core]
    excludesfile = ~/.gitignore_global

[user]
    name = Jeff Kiske
    email = kiske@uber.com

[diff]
    compactionHeuristic = true
